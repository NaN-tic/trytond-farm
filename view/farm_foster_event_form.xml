        <field name="timestamp"/>
    </group>
    <group id="animal_or_group" colspan="2" col="2">
        <label name="animal"/>
        <field name="animal"/>
        <label name="animal_group"/>
        <field name="animal_group"/>
    </group>
    <label name="employee"/>
    <field name="employee"/>
    <group id="foster_fields_group" colspan="4" col="4">
        <separator id="foster_fields_separator" colspan="4"/>
        <label name="quantity"/>
        <field name="quantity"/>
        <label name="pair_female"/>
        <field name="pair_female"/>
        <separator id="validated_fields" colspan="4"/>
        <label name="female_cycle"/>
        <field name="female_cycle"/>
        <label name="farrowing_group"/>
        <field name="farrowing_group"/>
        <label name="pair_event"/>
        <field name="pair_event"/>
        <label name="move"/>
        <field name="move"/>
    </group>
    <separator name="notes" colspan="4"/>
    <field name="notes" colspan="4"/>
    <group id="state_and_buttons" colspan="4" col="12">
        <label name="state"/>
        <field name="state"/>
        <button name="draft"/>
        <button name="validate_event"/>
    </group>
