<form>
    <group id="header" colspan="4" col="6">
        <label name="farm"/>
        <field name="farm"/>
        <label name="timestamp"/>
        <group col="2" id="timestamp">
            <field name="timestamp" widget="date"/>
            <field name="timestamp" widget="time"/>
        </group>
    </group>
    <group id="animal_or_group" colspan="2" col="2">
        <label name="animal"/>
        <field name="animal"/>
        <label name="animal_group"/>
        <field name="animal_group"/>
    </group>
    <label name="employee"/>
    <field name="employee"/>
    <label name="location"/>
    <field name="location"/>
    <label name="quantity"/>
    <field name="quantity"/>
    <group id="feed_fields_group" colspan="4" col="4">
        <separator id="feed_fields_separator" colspan="4"/>
        <label name="feed_location"/>
        <field name="feed_location"/>
        <newline/>
        <label name="feed_product"/>
        <field name="feed_product"/>
        <label name="feed_lot"/>
        <field name="feed_lot"/>
        <newline/>
        <label name="feed_quantity"/>
        <field name="feed_quantity"/>
        <label name="uom"/>
        <field name="uom"/>
        <newline/>
        <label name="start_date"/>
        <field name="start_date"/>
        <label name="end_date"/>
        <field name="end_date"/>
        <separator id="admin_fields_separator" colspan="4"/>
        <label name="feed_quantity_animal_day"/>
        <field name="feed_quantity_animal_day"/>
        <label name="feed_inventory"/>
        <field name="feed_inventory"/>
        <label name="move"/>
        <field name="move"/>
    </group>
    <separator name="notes" colspan="4"/>
    <field name="notes" colspan="4"/>
    <group id="state_and_buttons" colspan="4" col="12">
        <label name="state"/>
        <field name="state"/>
        <button name="draft"/>
        <button name="validate_event"/>
    </group>
</form>
