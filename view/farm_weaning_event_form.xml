<form>
    <group id="header" colspan="4" col="6">
        <label name="farm"/>
        <field name="farm"/>
        <label name="timestamp"/>
        <group col="2" id="timestamp">
            <field name="timestamp" widget="date"/>
            <field name="timestamp" widget="time"/>
        </group>
    </group>
    <group id="animal_or_group" colspan="2" col="2">
        <label name="animal"/>
        <field name="animal"/>
        <label name="animal_group"/>
        <field name="animal_group"/>
    </group>
    <label name="employee"/>
    <field name="employee"/>
    <group id="weaning_fields_group" colspan="4" col="4">
        <separator id="weaning_fields_separator" colspan="4"/>
        <label name="female_to_location"/>
        <field name="female_to_location"/>
        <newline/>
        <label name="weaned_to_location"/>
        <field name="weaned_to_location"/>
        <label name="quantity"/>
        <field name="quantity"/>
        <label name="last_minute_fostered"/>
        <field name="last_minute_fostered"/>
        <label name="casualties"/>
        <field name="casualties"/>
        <field name="weaned_animals" colspan="4"/>
        <label name="weaned_group"/>
        <field name="weaned_group"/>
        <separator id="validated_fields" colspan="4"/>
        <label name="female_cycle"/>
        <field name="female_cycle"/>
        <label name="born_alive"/>
        <field name="born_alive"/>
        <label name="fostered"/>
        <field name="fostered"/>
        <label name="farrowing_group"/>
        <field name="farrowing_group"/>
        <label name="female_move"/>
        <field name="female_move"/>
        <label name="weaned_move"/>
        <field name="weaned_move"/>
        <label name="lost_move"/>
        <field name="lost_move"/>
    </group>
    <separator name="notes" colspan="4"/>
    <field name="notes" colspan="4"/>
    <group id="state_and_buttons" colspan="4" col="12">
        <label name="state"/>
        <field name="state"/>
        <button name="draft"/>
        <button name="validate_event"/>
    </group>
</form>
